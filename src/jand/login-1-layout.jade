                      span.d-inline-block 展開全新社交圈
                  form
                    .row.mb-4
                      .col-12.mb-4
                        input.form-control(
                          type="email",
                          name="Email"
                          placeholder="Email",
                          value='pogiQQ@gmail.com'
                        )
                      .col-12.mb-4
                        input.form-control(
                          type="password",
                          placeholder="Password",
                          name="password",
                          value='********'
                        )
                    button.w-100.btn.btn-primary.btn-lg.d-block(
                      type="submit",
                    ) 登入
                    button.w-100.btn.btn-link.btn-lg.d-block(
                      type="button",
                      onClick='document.location.href = "register.html"'
                    ) 註冊帳號
